  <script src="/assets/js/scripts.js"></script>
  <script src="/assets/js/custom.js"></script>
  <script>

    const btnUpdate = document.getElementsByTagName('tr')
    let idx, res
    for (idx = 0; idx < btnUpdate.length; idx++) {
      let a = btnUpdate[idx + 1].getElementsByTagName('td')[4].getElementsByTagName('button')[0]
      a.addEventListener('click', () => {
        res = a.getAttributeNode('data-id').textContent.split(',')
        console.log(res)
        document.getElementById('form-update').setAttribute('action', '/admin/{{profile.id_admin}}/barang/update/' + `${res[0]}`)
        document.getElementById('nama_barang').setAttribute('value', res[1])
        document.getElementById('harga_barang').setAttribute('value', res[2])
        document.getElementById('stock').setAttribute('value', res[3])
      })
    }
  </script>

