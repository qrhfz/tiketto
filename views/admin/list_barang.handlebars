      <!-- Main Content -->
      <div class="main-content">
        <section class="section">
          <div class="section-header">
            {{#each transaksi}}
            <h1>{{dataValues.id_user}}</h1>
            {{/each}}
            <div class="section-header-breadcrumb">
              <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
              <div class="breadcrumb-item"><a href="#">Components</a></div>
              <div class="breadcrumb-item">Table</div>
            </div>
          </div>

          <div class="section-body">
            <h2 class="section-title">Daftar Barang</h2>
            <p class="section-lead">Daftar barang di partner petualang</p>

            <div class="row">
              <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                  <div class="card-header">
                    <button class="btn btn-info" data-toggle="modal" data-target="#exampleModalCenter">Tambah
                      Barang</button>
                  </div>
                  <div class="card-body">
                    <div class="table-responsive">
                      <table class="table table-bordered table-md text-center">
                        <tr>
                          <th>No</th>
                          <th>Nama Barang</th>
                          <th>Harga</th>
                          <th>stock</th>
                          <th>Aksi</th>
                        </tr>
                        {{#each data}}
                        <tr>
                          <td>{{math @index '+' 1}}</td>
                          <td>{{dataValues.nama_barang}}</td>
                          <td>{{dataValues.harga_barang}}</td>
                          <td>{{dataValues.stock}}</td>
                          <td class="d-flex align-items-center justify-content-center">
                            <button class="btn btn-info" data-toggle="modal"
                              data-id="{{dataValues.id_barang}},{{dataValues.nama_barang}},{{dataValues.harga_barang}},{{dataValues.stock}}"
                              class="btn-update" data-target="#ModalUpdate"><i class="fas fa-pencil-alt"></i></button>
                            <form class="ml-2" action="/admin/{{../profile.id_admin}}/barang/{{dataValues.id_barang}}"
                              method="POST">
                              <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                            </form>
                          </td>
                        </tr>
                        {{/each}}
                      </table>
                    </div>
                  </div>
                  <div class="card-footer text-right">
                    <nav class="d-inline-block">
                      <ul class="pagination mb-0">
