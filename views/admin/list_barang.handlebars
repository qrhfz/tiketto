          <ul class="sidebar-menu">
            <li class="menu-header">Dashboard</li>
            <li class="dropdown">
              <a href="/admin/{{profile.id_admin}}" class="nav-link"><i
                  class="fas fa-fire"></i><span>Dashboard</span></a>
            </li>
            <li class="menu-header">Barang</li>
            <li class="dropdown active">
