      <div class="main-sidebar sidebar-style-2">
        <aside id="sidebar-wrapper">
          <div class="sidebar-brand">
            <a href="index.html">Stisla</a>
          </div>
          <div class="sidebar-brand sidebar-brand-sm">
            <a href="index.html">St</a>
          </div>
          <ul class="sidebar-menu">
            <li class="menu-header">Dashboard</li>
            <li class="dropdown">
              <a href="/user/{{profile.id_user}}" class="nav-link"><i class="fas fa-fire"></i><span>Dashboard</span></a>
            </li>
            <li class="menu-header">Barang</li>
            <li class="dropdown active">
              <a href="/user/{{profile.id_user}}/barang" class="nav-link"><i class="fas fa-campground"></i>
                <span>Daftar Barang</span></a>
            </li>
            <li class="menu-header">Transaksi</li>
            <li class="dropdown">
              <a href="/user/{{profile.id_user}}/transaksi" class="nav-link"><i class="fas fa-columns"></i>
                <span>Daftar Transaksi</span></a>
            </li>
            <li class="menu-header">Pages</li>
            <li class="dropdown">
              <a href="/user/{{profile.id_user}}/profile" class="nav-link"><i class="far fa-user"></i>
                <span>Profile</span></a>
            </li>
          </ul>
        </aside>
      </div>

      <!-- Main Content -->
      <div class="main-content">
        <section class="section">
          <div class="section-header">
            {{#each transaksi}}
            <h1>{{dataValues.id_user}}</h1>
            {{/each}}
            <div class="section-header-breadcrumb">
              <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
              <div class="breadcrumb-item"><a href="#">Components</a></div>
              <div class="breadcrumb-item">Daftar Transaksi</div>
            </div>
          </div>

          <div class="section-body">
            <h2 class="section-title">Daftar Barang</h2>
            <p class="section-lead">Daftar barang di partner petualang</p>

            <div class="row container-fluid my-5 justify-content-center">
              {{#each data}}
              <div class="card col-12 col-sm-12 col-md-3 mx-2 text-center" style="width: 10rem;">
                <img class="card-img-top" style="height: 290px;" src="/assets/images/produk/{{dataValues.foto}}.jpg"
                  alt="Card image cap">
                <div class="card-body">
                  <h6 class="card-title">{{dataValues.nama_barang}}</h6>
                  <h6 class="card-subtitle" style="font-size:109%">Rp.{{dataValues.harga_barang}}</h6><br>
                  <button class="btn btn-info btnKeranjang" data-id="{{dataValues.id_barang}}" data-toggle="modal"
                    data-target="#ModalAddKeranjang">Tambah ke
                    keranjang</button>
                </div>
              </div>
              {{/each}}
            </div>
        </section>
      </div>
      <footer class="main-footer">
        <div class="footer-left">
          Copyright &copy; 2018 <div class="bullet"></div> Design By <a href="https://nauval.in/">Muhamad Nauval
            Azhar</a>
        </div>
        <div class="footer-right">
        </div>
      </footer>
