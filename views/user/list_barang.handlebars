  </div>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="ModalAddKeranjang" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <form action="/user/{{profile.id_user}}/keranjang" method="post" class="row text-center justify-content-center">
          <div class="modal-body">
            <h5 class="card-title ">Tambahkan Barang ini ke keranjang ?</h5>
            <div class="form-group w-50 mx-auto">
              <input type="hidden" id="hiddenId" name="id_barang" value="">
              <input type="hidden" name="id_user" value="{{profile.id_user}}">
              <label for="example-number-input" class="label">Jumlah</label>
              <div class="col-10 ml-3">
                <input class="form-control" name="jumlah" type="number" min="1" max="5" value="1"
                  id="example-number-input">
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="subbmit" class="btn btn-info">Tambahkan</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Batal</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    let btnKeranjang = document.querySelectorAll('.btnKeranjang')
    let id = document.getElementById('hiddenId')
    for (let btn of btnKeranjang) {
      btn.addEventListener('click', () => {
        id.setAttribute('value', btn.dataset.id)
      })
    }
  </script>



